<html lang="en">
   <head>
      <title>User List</title>
      <link href="<%= url('/style.css') %>" rel="stylesheet" type="text/css" />
   </head>
    
   <body>
      <nav>
         <ul>
            <li>
               <a href="index">Home</a>
            </li>
            <li>
               <a href="profilecreate">Profile</a>
            </li>
            <li>
               <a href="userlist">User List</a>
            </li>
            <li>
               <a href="logout">Logout</a>
            </li>
         </ul>
      </nav>
      
      <div id="changedetailsbody">
         <h1>Users:</h1>
         <h2>Below is a list of Mentees that are currently enrolled in the system:</h2>
         <table>
            <tr>
               <th>Name</th>
               <th>Email</th>
               <th>Contact Number</th>
            </tr>
            <% @mentees.each do |mentee| %>
               <% unless mentee.nil? %>
                  <tr>
                     <td>
                        <%= h mentee.first_name unless mentee.first_name.nil? %>
                        <%= h mentee.surname unless mentee.surname.nil?%>
                     </td>
                     <td><%= h mentee.email unless mentee.surname.nil? %></td>
                     <td><%= h mentee.contact_number unless mentee.surname.nil? %></td>
                     <td>
                        <a href="<%= mentee.id.nil? ? "/not_found" : "profile/" + (h mentee.id) %>">Profile</a>
                     </td>
                  </tr>
               <% end %>
            <% end %>
         </table>
         <br>
         <h2>Below is a list of Mentors that are currently enrolled in the system:</h2> 
         <table>
            <tr>
               <th>Name</th>
               <th>Job Title</th>
               <th>Main Interest</th>
            </tr>
            <% @mentors.each do |mentor| %>
            <tr>
               <td>
                     <%= h mentor.first_name unless mentor.first_name.nil? %>
                     <%= h mentor.surname unless mentor.surname.nil?%>
               </td>
               <td><%=h mentor.job_deg_cosmetic_name unless mentor.job_deg_cosmetic_name.nil? %></td>
               <td><%=h mentor.major_interest unless mentor.major_interest.nil? %>
               <td>
               <a href="<%= mentor.id.nil? ? "/not_found" : "profile/" + (h mentor.id) %>">Profile</a>
               </td>
            </tr>
            <% end %>
         </table>
         <br> 
      </div>
       
   </body>
</html>