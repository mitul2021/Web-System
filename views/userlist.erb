<html>
   <head>
      <title>User List</title>
      <link href="<%= url('/style.css') %>" rel="stylesheet" type="text/css" />
   </head>
    
   <body>
      <nav>
         <ul>
            <li>
               <a href="index">Home</a>
            </li>
            <li>
               <a href="profilecreate">Profile</a>
            </li>
            <li>
               <a href="userlist">User List</a>
            </li>
            <li>
               <a href="logout">Logout</a>
            </li>
         </ul>
      </nav>
      
      <div id="changedetailsbody">
         <h1>Users:</h1>
         <h2>Below is a list of Mentees that are currently enrolled in the system:</h2>
         <table>
            <tr>
               <th>Name</th>
               <th>Email</th>
               <th>Contact Number</th>
            </tr>
            <% @mentees.each do |mentee| %>
            <tr>
               <td><%= mentee.first_name %> <%= mentee.surname %></td>
               <td><%= mentee.email %></td>
               <td><%= mentee.contact_number %></td>
               <td><a href="profile/<%= mentee.id %>">Profile</a></td>
            </tr>
            <% end %>
         </table>
         <br>
         <h2>Below is a list of Mentors that are currently enrolled in the system:</h2> 
         <table>
            <tr>
               <th>Name</th>
               <th>Job Title</th>
               <th>Main Interest</th>
            </tr>
            <% @mentors.each do |mentor| %>
            <tr>
               <td><%= mentor.first_name %> <%= mentor.surname %></td>
               <td><%= mentor.job_deg_cosmetic_name%></td>
               <td><%= mentor.major_interest%>
               <td><a href="profile/<%= mentor.id %>">Profile</a></td>
            </tr>
            <% end %>
         </table>
         <br> 
      </div>
       
   </body>
</html>