<html>
    <head>
        <title>Multi Choice Survey</title>
      
    </head>
    <body>
        <h1>Multi Choice Survey:</h1>
            
        <form method="post" action="process-multichoicesurvey">
             
            <% if @role=="mentee" %> <!-- need to get is mentee or mentor out of cookies -->
                
                <label>First Name:</label>
                <input type="text" name="first_name" value=""/>
                
                <label>Surname:</label>
                <input type="text" name="surname" value=""/>
            
                <label>Year of Birth:</label>
                <select name="year_of_birth">
                    <% (1900..2021).each do |i| %>
                        <% @str="<option value=\"#{i}\">#{i}</option>" %>
                        <%= @str %>
                    <% end %>
                </select>
            
                <label>Contact number:</label>
                <input type="tel" name="contact_number" value=""/>
            
                <label>Course Name:</label>
                <input type="text" name="course" value=""/> <!-- need to be dropdown will do properly later -->
                
                <label>Degree year:</label>
                <select name="year_of_birth">
                    <option value="foundation_year">Foundation Year</option>
                    <% (1..3).each do |i| %>
                        <% @str="<option value=\"#{i}\">#{i}</option>" %>
                        <%= @str %>
                    <% end %>
                    <option value="year_in_industry">Year In Industry</option>
                    <option value="masters">Masters Year</option>
                    <option value="phd">PhD</option>
                </select>
                
                <label>Question ...</label>
                <input type="text" name="form_field_mentee3" value=""/>
                
                <input type="submit" value="Submit:" name="submitmentee" />
            
            <% elsif @role=="mentor" %>
            
                <label>Job Title:</label>
                <input type="text" name="form_field_mentor1" value=""/>
                
                <label>Industry area:</label>
                <input type="text" name="form_field_mentor2" value=""/>
                <label>Job information</label>
                <input type="text" name="form_field_mentor3" value=""/>
                
                <input type="submit" value="Submit:" name="submitmentor" />
            
            <% else %>
                <p>ERROR</p>
            <% end %>
        </form>

        
    </body>
</html>